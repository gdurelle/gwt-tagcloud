<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>MyAppTagCloud.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>tagService</servlet-name>
    <servlet-class>gdurelle.tagcloud.server.TagServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>tagService</servlet-name>
    <url-pattern>/tagcloud/tagService</url-pattern>
  </servlet-mapping>
</web-app>
